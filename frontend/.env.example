# ===================================================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO - FRONTEND
# ===================================================================

# URL base de la API del backend
# Development: http://localhost:9090
# Production: https://api.eventos.unla.edu.ar
VITE_API_BASE_URL=http://localhost:9090

# Entorno de ejecución
VITE_ENV=development

# Timeout para requests HTTP (en milisegundos)
# Default: 30000 (30 segundos)
VITE_API_TIMEOUT=30000

# Habilitar logging de requests en consola
# true = mostrar logs de requests/responses
# false = modo silencioso
VITE_ENABLE_API_LOGGING=true

